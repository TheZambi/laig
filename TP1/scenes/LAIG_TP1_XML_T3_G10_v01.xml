<lsf>
    <initials>
        <reference length="2" />
        <!-- axis length; "0" means no axis displayed -->
        <root id="Root" />
        <!-- identifier of root node of the scene graph; this node -->
        <!-- must be defined in one of the following NODE declarations -->
    </initials>
    <views default="defaultCamera">
        <!-- at least one of the following type of cameras must be declared -->
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <ortho id="demoOrtho" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="5" y="0" z="10" />
            <to x="5" y="0" z="0" />
            <up x="0" y="1" z="0" /><!-- optional, default 0,1,0 -->
        </ortho>
    </views>

    <illumination>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />           <!-- global ambient -->
        <background r="0.1" g="0.7" b="1.0" a="1.0" />        <!-- background color -->
    </illumination>


    <lights>
        <!-- NOTE: this block "light" must be repeated as necessary with different "id". At least one light should be present, and a maximum of eight lights is accepted. -->
        <light id="Light">            <!-- light identifier -->
            <enable value="1" />
            <!-- enable/disable -->
            <position x="10" y="12" z="9.5" w="1.0" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>
    </lights>


    <textures>
        <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->
        <texture id="Vidral" path="./scenes/images/vidral.jpg" />
        <texture id="Rim" path="./scenes/images/rocks.jpg" />

    </textures>


    <materials>
        <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material
         requires a distinct "id". At least one material should be present. -->
        <material id="Material1">
            <shininess value="ff" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="Iron"> 
            <shininess value="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />        <!-- specular reflection -->
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />         <!-- diffuse reflection -->
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />         <!-- ambient reflection -->
            <emissive r="0.0" g="0.0" b="0.0" a="1-0" />        <!-- emissive component -->
        </material>
    </materials>

    <nodes>
        <node id="Root">            <!-- defines one intermediate node; may be repeated as necessary -->
            <!-- next two lines are mandatory -->
            <material id="Material1" /><!-- this superimposes the material received from parent node id="null" maintains material from parent node -->

            <texture id="Vidral"><!-- declared texture superimposes the texture received from parent node id="null" maintains texture from parent node id="clear" clears texture declaration received from parent node -->
                <amplification afs="2.0" aft="2.0" /><!-- for primitives = dx/afs, dy/aft -->
            </texture>

            <!-- geom. transf. are optional and may be repeated, in any order, as necessary: -->
            <transformations>
                
            </transformations>

            <!-- declaring descendants, at least one node or one leaf must be present
             descendants may be mixed, nodes and leafs -->
            <descendants>
                <noderef id="Floor" />
                <noderef id="Tractor"/>
                <!-- "ss" is the identifier of a node or of leaf; -->
                <!-- may be repeated as necessary. It can refer an -->
                <!-- identifier of another node, before or later defined in the file. -->
                <!-- next lines define nodes of type leaf; may be repeated, in any order, as necessary -->
                <!-- 2D coordinates on the XY plane for left-top and right-bottom vertices. -->
            </descendants>
        </node>
        <node id="Floor">           
           
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="x" angle="90" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-20" y1="20" x2="20" y2="-20"/>
            </descendants>
        </node>
         <node id="Tractor">            
            <material id="null" />

            <transformations>
            </transformations>

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>
            <descendants>
                <noderef id="Wheels" />
                <noderef id="Body" />
            </descendants>
        </node>
         <node id="Wheels">    
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <noderef id="leftBackWheel" />
                <noderef id="rightBackWheel" />
                <noderef id="leftFrontWheel" />
                <noderef id="rightFrontWheel" />
            </descendants>
        </node>
        <node id="leftBackWheel">  
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="3" y="-3" z="1.5" />
            </transformations>

            <descendants>
                <noderef id="StandardWheel" />
            </descendants>
        </node>
        <node id="rightBackWheel">          
            <material id="null" />

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>


            <transformations>
                <translation x="-3.5" y="-3" z="1.5" />
            </transformations>

            <descendants>
                <noderef id="StandardWheel" />
            </descendants>
        </node>
        <node id="leftFrontWheel">           
            <material id="null" />

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>
                <translation x="3" y="-3" z="10" />
            </transformations>

            <descendants>
                <noderef id="StandardWheel" />
            </descendants>
        </node>
        <node id="rightFrontWheel">         
            <material id="null" />

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>
                <translation x="-3.5" y="-3" z="10" />
            </transformations>

            <descendants>
                <noderef id="StandardWheel" />
            </descendants>
        </node>

        <node id="StandardWheel">         
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <rotation axis="y" angle="90"/>
            </transformations>

            <descendants>
                <noderef id="Tire" />
                <noderef id="Rim" />
            </descendants>
        </node>

        <node id="Tire">
            <material id="Rubber"/>

            <texture id="Tire">
                <amplification afs="1.0" aft="1.0"/>
            </texture>

            <transformations>
            </transformations>

            <descendants>
                <leaf type="torus" inner="0.5" outer="2" slices="20" loops="20" />  <!-- tire -->
            </descendants>
        </node>

        <node id="Rim">
            <material id="Iron"/> 

            <texture id="Rim">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0" y="5" z="0" />
            </transformations>

            <descendants>
                <leaf type="cylinder" height="0.5" topRadius="1" bottomRadius="1" stacks="20" slices="20"/> <!--center of the wheel-->
            </descendants>
        </node>

        <node id="Body">         
            <material id="null" />

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="0.0" y="5" z="0.0" />
            </transformations>

            <descendants>
                <noderef id="Chassis" />
                <noderef id="Cabin" />
                <noderef id="Chimney" />
            </descendants>
        </node>

        <node id="Chassis">
            <material id="null"/> 

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>
                
            </transformations>

            <descendants>
                <noderef id="licencePlate"/>
                <noderef id="mainChassisBody"/> <!--center of the wheel-->
            </descendants>
        </node>

        <node id="mainChassisBody">
            <material id="null"/> 

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>
                <translation x="0" y="-1" z="0"/>
                <scale sx="1" sy="0.8" sz="1.5"/>
                <rotation axis="z" angle="45" />
            </transformations>

            <descendants>
                <leaf type="cylinder" height="8" topRadius="4" bottomRadius="4" stacks="20" slices="4"/> <!--center of the wheel-->
            </descendants>
        </node>

        <node id="Cabin">
            <material id="null"/> 

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>
                <translation x="0.0" y="2.95" z="0" />
                <scale sx="1" sy="0.6" sz="1"/> 
                <rotation axis="z" angle="45" />
            </transformations>

            <descendants>
                <leaf type="cylinder" height="4" topRadius="4" bottomRadius="4" stacks="20" slices="4"/> <!--center of the wheel-->
            </descendants>
        </node>

        <node id="licencePlate">
            <material id="null"/> 

            <texture id="clear">
                <amplification afs="1.0" aft="1.0" />
            </texture>

            <transformations>
                <translation x="-2" y="-3" z="12.1" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="0" y1="0" x2="4" y2="1"/> <!--center of the wheel-->
            </descendants>
        </node>

         <node id="Chimney">
            <material id="null"/> 

            <texture id="clear">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <transformations>
                <translation x="-2.0" y="1.25" z="10" />
                <rotation axis="x" angle="-90" />
            </transformations>

            <descendants>
                <leaf type="cylinder" height="2" topRadius="0.2" bottomRadius="0.2" stacks="20" slices="20"/> <!--center of the wheel-->
            </descendants>
        </node>
    </nodes>
</lsf>

